<h2>Create a new drone</h2>

<form action="/drones/create" method="POST">
    <label>
      Name
      <input type="string" name="name" />
    </label>
  
    <label>
        Propellers
      <input type="number" name="propellers" />
    </label>
  
    <label>
      Maximum Speed
      <textarea type="number" name="maxSpeed"> </textarea>
    </label>
  
    <button type="submit">Create</button>
  </form>

